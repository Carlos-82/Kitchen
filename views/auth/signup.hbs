

{{#if errorMessage}}
<p class="error-message">
    {{ errorMessage }}
</p>
{{/if}}
<div class="contact-form">
    <h1> Sign Up </h1>
<form action="/auth/signup" method="post">
    <div class="txtb">
        <label for="name-input"> User Name </label>
        <input type="text" name="userName" id="name-input" placeholder="e.g., Diana Prince">
    </div>

    <div class="txtb">
        <label for="email-input"> Email </label>
        <input type="email" name="email" id="email-input" placeholder="e.g., diana@themyscira.agency">
    </div>

    <div class ="txtb">
        <label for="password-input"> Password </label>
        <input type="password" name="password" id="password-input" placeholder="e.g., ••••••••••••">
    </div>

    <button class="formbtn"> Create New Account </button>


<p>
    Already have an account?
    <a class="formlink" href="/auth/login">
        Log in.
    </a>
</p></form>
</div>