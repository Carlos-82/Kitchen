<header>
    <img src="/images/logo2.png" class="logo">
    <ul>
        <li><a href="/mainpage">Recipes</a></li>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/create">Create</a></li>
    </ul>
</header>
<div class="maincontainer">
    <h1>Hello {{currentUserInfo.userName}}</h1>
    <h2>Your Recipes</h2>

<div class="bodymainpage">
     
    <div class="container">
      {{#each user.recipesId}} 
        <div class="card">
            <div class="imgBx">
                <img src={{this.recipeImage}} alt="fotoreceta">
            </div>
            <div class="content">
                <h2>{{this.nameRecipe}}</h2>
                <p>{{this.typeOfCuisine}}</p>
                <p>{{this.dishType}}</p>
                <p>{{this.preparationTime}}</p>
                <p>{{this.cookingTime}}</p>
            <a href="/detailrecipe/{{this._id}}" class="recipesbtn">Read more</a>
            </div>
        </div>{{/each}}
    </div>
</div>

<script type="text/javascript">
    window.addEventListener("scroll", function () {
        var header = document.querySelector("header");
        header.classList.toggle("sticky", window.scrollY > 0);
    })</script>