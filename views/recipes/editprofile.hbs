<form action="/editprofile" method="post" enctype="multipart/form-data">
    <div>
        <label for="userName">UserName</label>
        <input type="text" name="userName" id="username" value="{{currentUserInfo.userName}}">
    </div>
    <div>
        <label for="name">Your name</label>
        <input type="text" name="name" id="realname" value="{{currentUserInfo.name}}">
    </div>
    <label for="email">Your email</label>
    <input type="text" name="email" id="useremail" value="{{currentUserInfo.email}}">
    </div>
    <div>
        <label for="aboutMe"> About me</label>
        <input type="text" name="aboutMe" id="aboutMe" value="{{currentUserInfo.aboutMe}}">
    </div>
    <div>
        <label for="userimage">User profile picture</label>
        <input type="file" name="userImage" id="userimage">
    </div>
    <button type="submit">Submit</button>
</form></div>


