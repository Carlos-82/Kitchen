<h1>Formulario edici√≥n de la receta</h1>
<form action="/create" method="post" enctype="multipart/form-data">
    <div>
        <label for="nameRecipe">Name of the recipe</label>
        <input type="text" name="nameRecipe" id="nameRecipe" value={{recipe.nameRecipe}}>
    </div>

    <div>
        <label for="typeOfCuisine"> Type of cuisine </label>
        <input type="text" name="typeOfCuisine" id="typeOfCuisine" value={{recipe.typeOfCuisine}}>
    </div>
    <label for="dishType">Type of dish</label>
    <select id="dishType" name="dishType" size="1">
        <option value="breakfast">breakfast</option>
        <option value="main course">main course</option>
        <option value="side dish">side dish</option>
        <option value="drink">drink</option>
        <option value="dessert">dessert</option>
        <option value="appetizer">appetizer</option>
        <option value="other">other</option>
    </select>
    </div>
    <div>
        <label for="difficultyLevel">Level of difficulty </label>
        <input type="text" name="difficultyLevel" id="difficultyLevel" value={{recipe.difficultyLevel}}>
    </div>
    <div>
        <label for="numberofportions"> Number of portions </label>
        <input type="number" name="numberofportions" id="numberofportions" min="1" max="10" value={{recipe.numberofportions}}>
    </div>
    <div>
        <label for="preparationTime"> Preparation time </label>
        <input type="text" name="preparationTime" id="preparationTime" value={{recipe.preparationTime}}>
    </div>
    <div>
        <label for="cookingTime"> Cooking time </label>
        <input type="text" name="cookingTime" id="cookingTime" value={{recipe.cookingTime}}>
    </div>
    <div>
        <label for="ingredients"> Ingredients</label>
        <input type="text" name="ingredients" id="ingredients" value={{recipe.ingredients}}>
    </div>
    <div>
        <label for="method"> Method</label>
        <input type="text" name="method" id="method" value={{recipe.method}}>
    </div>
    <div>
        <label for="linktotheoriginalrecipe"> Link to the original recipe</label>
        <input type="url" name="linktotheoriginalrecipe" id="linktotheoriginalrecipe" value={{recipe.linkToTheOriginalRecipe}}>
    </div>
    <div>
        <label for="notes"> Notes</label>
        <input type="text" name="notes" id="notes" value={{recipe.notes}}>
    </div>
    <div>
        <label for="Recipe image">Recipe image</label>
        <input type="file" name="foodimage" id="foodimage">
    </div>
    <button type="submit">Submit</button>
</form>